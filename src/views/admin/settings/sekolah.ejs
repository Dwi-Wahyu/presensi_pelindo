<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Presensi Pelindo</title>

    <!-- Custom fonts for this template-->
    <link
      href="/src/assets/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Datatable -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css"
    />

    <!-- Vendor Bootstrap  -->
    <link
      rel="stylesheet"
      href="/src/assets/vendor/bootstrap-icons/bootstrap-icons.css"
    />

    <!-- Custom styles for this template-->
    <link href="/src/assets/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../../partials/sidebarAdmin', { link: 'sekolah', parent:
      'settings' }) %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('../../partials/topbar') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">Daftar Sekolah</h1>
              <button
                data-toggle="modal"
                data-target="#exampleModalCenter"
                href="#"
                class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
              >
                <i class="fas fa-plus-circle mr-1 fa-sm text-white-50"></i>
                Input Sekolah
              </button>
            </div>

            <!-- Content Row -->
            <div class="row">
              <!-- Content Column -->
              <div class="col-12 mb-4">
                <!-- Project Card Example -->
                <div class="card shadow mb-4">
                  <div class="card-body">
                    <table
                      id="example"
                      class="table table-striped table-bordered"
                      style="width: 100%"
                    >
                      <thead>
                        <tr>
                          <th>Nama</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody></tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright &copy; Your Website 2021</span>
            </div>
          </div>
        </footer>
        <!-- End of Footer -->

        <!-- Input Modal -->
        <div
          class="modal fade"
          id="exampleModalCenter"
          tabindex="-1"
          role="dialog"
          aria-labelledby="exampleModalCenterTitle"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">
                  Form Input Sekolah
                </h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <form id="modal-form">
                <div class="modal-body">
                  <div
                    id="duplikasi-alert"
                    class="alert alert-warning alert-dismissible fade show d-none"
                    role="alert"
                  >
                    <i class="fa fa-exclamation mr-1"></i>
                    Nama sekolah terduplikasi
                    <button
                      type="button"
                      class="close"
                      data-dismiss="alert"
                      aria-label="Close"
                    >
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div
                    id="success-alert"
                    class="alert alert-success alert-dismissible fade show d-none"
                    role="alert"
                  >
                    <i class="fa fa-check-circle mr-1"></i>
                    Berhasil Input Sekolah
                    <button
                      type="button"
                      class="close"
                      data-dismiss="alert"
                      aria-label="Close"
                    >
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="">
                    <label for="nama" class="form-label">Nama Sekolah</label>
                    <div class="input-group">
                      <input
                        type="text"
                        id="nama-sekolah"
                        class="form-control"
                      />
                      <div class="input-group-append">
                        <span class="input-group-text">
                          <i class="fa fa-school"></i>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                  >
                    Close
                  </button>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Edit Modal -->
    <div
      class="modal fade"
      id="editModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">
              Form Edit Sekolah
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form id="modal-form-edit">
            <div class="modal-body">
              <div
                id="edit-duplikasi-alert"
                class="alert alert-warning alert-dismissible fade show d-none"
                role="alert"
              >
                <i class="fa fa-exclamation mr-1"></i>
                Nama sekolah terduplikasi
                <button
                  type="button"
                  class="close"
                  data-dismiss="alert"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="">
                <label for="nama" class="form-label">Nama Sekolah</label>
                <div class="input-group">
                  <input
                    required
                    type="text"
                    id="edit-nama-sekolah"
                    class="form-control"
                  />
                  <div class="input-group-append">
                    <span class="input-group-text">
                      <i class="fa fa-school"></i>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Delete Modal -->
    <div
      class="modal fade"
      id="deleteModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <form id="modal-form-edit">
            <div class="modal-body">
              <div class="d-flex">
                <i class="bi bi-trash popup-logo"></i>
                <div class="d-flex ml-2 mt-3 flex-column">
                  <h4 class="">Hapus sekolah ?</h4>
                  <h5>Anda akan menghapus sekolah ini dari daftar</h5>
                </div>
              </div>
              <div class="d-flex justify-content-center">
                <button class="btn btn-secondary mr-3" data-dismiss="modal">
                  Batal
                </button>
                <button class="btn btn-danger" id="hapusbtn">Hapus</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Datatable -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="/src/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/src/assets/js/sb-admin-2.min.js"></script>

    <script>
      const table = $("#example").DataTable({
        processing: true,
        serverSide: true,
        ajax: {
          url: "/admin/settings/sekolah/data",
          type: "GET",
        },
        columns: [
          { data: "nama", title: "Nama" },
          {
            data: null,
            title: "Action",
            render: function (data, row, type) {
              return `
                <button 
                  data-toggle="modal" 
                  data-target="#editModal" 
                  class='btn btn-primary' 
                  onclick="editToggle(
                    '${encodeURIComponent(data.id)}', 
                    '${encodeURIComponent(data.nama)}'
                  )">
                    <i class='fa fa-edit'></i>
                    Edit
                </button>
                <button
                  data-toggle="modal" 
                  data-target="#deleteModal" 
                  class='btn btn-danger'
                  onclick=hapusSekolah('${encodeURIComponent(data.id)}')
                >
                  <i class="bi bi-trash"></i>
                  Hapus
                </button>
                <a href='/admin/rekapitulasi/cetak/${data.id}/1'
                  class='btn btn-success'
                >
                  <i class="bi bi-printer"></i>
                  Cetak Rekapitulasi
                </a>
                `
            },
          },
        ],
      })

      var sekolahDipilih

      $("#modal-form").on("submit", (e) => {
        e.preventDefault()

        const nama = $("#nama-sekolah").val()

        $("#duplikasi-alert").addClass("d-none")
        $("#success-alert").addClass("d-none")

        fetch("/admin/settings/sekolah", {
          method: "POST",
          body: JSON.stringify({ nama }),
          headers: {
            "Content-Type": "application/json",
          },
        }).then((result) => {
          if (!result.ok) {
            $("#duplikasi-alert").removeClass("d-none")
          } else {
            location.reload()
          }
        })
      })

      $("#modal-form-edit").on("submit", (e) => {
        e.preventDefault()

        const nama = $("#edit-nama-sekolah").val()

        $("#edit-duplikasi-alert").addClass("d-none")

        const data = {
          id: sekolahDipilih,
          nama,
        }

        fetch("/admin/settings/sekolah", {
          method: "PATCH",
          body: JSON.stringify(data),
          headers: {
            "Content-Type": "application/json",
          },
        }).then((result) => {
          if (!result.ok) {
            $("#edit-duplikasi-alert").removeClass("d-none")
          } else {
            location.reload()
          }
        })
      })

      function editToggle(id, nama) {
        let inputVal = decodeURIComponent(nama)
        $("#edit-nama-sekolah").val(inputVal)

        sekolahDipilih = decodeURIComponent(id)
      }

      function hapusSekolah(data) {
        const id = decodeURIComponent(data)

        sekolahDipilih = id
      }

      $("#hapusbtn").on("click", (e) => {
        e.preventDefault()

        fetch("/admin/settings/sekolah", {
          method: "DELETE",
          body: JSON.stringify({ id: sekolahDipilih }),
          headers: {
            "Content-Type": "application/json",
          },
        }).then((result) => {
          location.reload()
        })
      })
    </script>
  </body>
</html>
