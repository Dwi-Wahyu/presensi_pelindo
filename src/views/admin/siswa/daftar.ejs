<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Presensi Pelindo</title>

    <!-- Custom fonts for this template-->
    <link
      href="/src/assets/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Datatable -->
    <link rel="stylesheet" href="/src/assets/vendor/datatable/bootstrap.css" />
    <link
      rel="stylesheet"
      href="/src/assets/vendor/datatable/dataTables.bootstrap4.min.css"
    />

    <!-- Vendor Bootstrap  -->
    <link
      rel="stylesheet"
      href="/src/assets/vendor/bootstrap-icons/bootstrap-icons.css"
    />

    <!-- Custom styles for this template-->
    <link href="/src/assets/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../../partials/sidebarAdmin', { link: 'daftar', parent:
      'siswa'}) %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('../../partials/topbar') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">Daftar Siswa PKL</h1>
            </div>

            <!-- Content Row -->
            <div class="row">
              <!-- Content Column -->
              <div class="col-12 mb-4">
                <!-- Project Card Example -->
                <div class="card shadow mb-4">
                  <div class="card-body">
                    <table
                      id="example"
                      class="table table-striped table-bordered"
                      style="width: 100%"
                    >
                      <thead>
                        <tr>
                          <th>Nama</th>
                          <th>Asal Sekolah</th>
                          <th>Jenis Kelamin</th>
                          <th>Kode</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody></tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Datatable -->
    <script src="/src/assets/vendor/datatable/jquery-3.7.0.js"></script>
    <script src="/src/assets/vendor/datatable/jquery.dataTables.min.js"></script>
    <script src="/src/assets/vendor/datatable/dataTables.bootstrap4.min.js"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="/src/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/src/assets/js/sb-admin-2.min.js"></script>

    <script>
      const table = $("#example").DataTable({
        processing: true,
        serverSide: true,
        ajax: {
          url: "/admin/siswa/daftar/data",
          type: "GET",
        },
        columns: [
          { data: "nama", title: "Nama" },
          { data: "namaAsal", title: "Asal Sekolah" },
          { data: "jenis_kelamin", title: "Jenis Kelamin" },
          { data: "kode_unik", title: "Kode" },
          {
            data: "id",
            title: "Action",
            render: function (data, row, type) {
              return `
                <a href='/admin/siswa/edit/${data}' class='btn btn-primary'>
                  <i class='bi bi-pencil-square'></i>
                </a>
              `
            },
          },
        ],
      })
    </script>
  </body>
</html>
